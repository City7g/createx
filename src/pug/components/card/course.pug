mixin course-horizontal(course)
  .course-horizontal
    a(href="/single-course.html").course-horizontal__image
      img(src=`/img/feature/${course.img}.jpg`, alt="").course-horizontal__img
    .course-horizontal__content
      h5.course-horizontal__prof(style="background: " + course.categoryColor)= course.category
      h4.course-horizontal__title
        a(href="/single-course.html")= course.title
      .course-horizontal__info
        p.course-horizontal__price= '$' + course.price
        p.course-horizontal__author= 'by ' + course.author
      
