extends ../layout/main

block variables
  - barba = 'blog'

block content
  section.section-blog
    .container
      h4.title-h6.section-blog__subtitle Our blog
      h1.title-h2.section-blog__title Createx School Journal

      // .section-blog__filters
        .tabs
          a(href="#") All
          a(href="#") Articles
          a(href="#") Videos
          a(href="#") Podcasts

        select
          option all themes 
          option Marketing 
          option Development 
          option Design
          option HR & Recruting
        
        .section-blog__search
          input(type="text", placeholder="Search blog...")

      .section-blog__posts
        each item in [1, 2, 3, 4, 5, 6, 7, 8]
          +card-post(item)
      
      .pagination.section-blog__pagination
        a(href="#").pagination__prev
        a(href="#").pagination__item.current 1
        a(href="#").pagination__item 2
        a(href="#").pagination__item 3
        a(href="#").pagination__item 4
        a(href="#").pagination__next
  
  section.section-newsletter
    .container
      .section-newsletter__wrap
        .section-newsletter__image
          img(src="/img/newsletter-image.svg", alt="").section-newsletter__img
        
        .section-newsletter__content
          h3.title-h2 Want to get the best articles weekly? Subscribe to our newsletter!

          form(novalidate)
            input(type="email", placeholder="Your working email", name="email")
            label
              input(type="checkbox", name="agree")
              p I agree to receive communications from Createx Online School 
            button(type="submit").btn-main Subscribe