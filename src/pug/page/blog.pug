extends ../layout/main

block variables
  - barba = 'blog'

block content
  section.section-blog
    .container
      h4.title-h6.section-blog__subtitle Our blog
      h1.title-h2.section-blog__title Createx School Journal

      .filters
        .tabs
          a(href="#").active
            | All
            sup 17
          a(href="#")
            | Marketing
            sup 4
          a(href="#") 
            | Management
            sup 3
          a(href="#")
            | HR & Recruting
            sup 5
          a(href="#")
            | Design
            sup 2
          a(href="#")
            | Development
            sup 3

        .filter-select
          .filter-select__title Event category
          select.filter-select__select
            option all themes 
            option Marketing 
            option Development 
            option Design
            option HR & Recruting

        .filter-select
          .filter-select__title Sort by
          select.filter-select__select
            option newest
            option old
        
        .filter-select
          .filter-select__title Show
          select.filter-select__select
            option 6
            option(selected) 9
            option 12
        
        form.form-search.section-blog__search
          input(type="text", placeholder="Search blog...")
          button(type="submit").form-search__btn
            span.icon-search.gray-600

      .section-blog__posts
        each item in [1, 2, 3, 4, 5, 6, 7, 8]
          +card-post(item)

      +pagination
  
  include ../section/newsletter