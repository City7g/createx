extends ../layout/main

block content
  section.section-first
    .container
      .section-first__wrap
        .section-first__content
          h1.title-h1 Enjoy studying with Createx Online Courses
          .section-first__btns
            button.btn-secondary About us
            button.btn-main Explore courses
          
        .section-first__img
          img(src="/img/first-img.svg", alt="")

      ul.section-first__list
        li
          span 1200
          p Students graduated
        li
          span 84
          p Completed courses
        li
          span 16
          p Qualified tutors
        li
          span 5
          p Years of experience

  section.section-why
    .container
      .section-why__wrap
        .section-first__img
          img(src="/img/why-img.jpg", alt="")
          
        .section-why__content
          h4.title-h6.section-why__subtitle Who we are
          h2.title-h2.section-why__title Why Createx?
          ul.list-main
            li A fermentum in morbi pretium aliquam adipiscing donec tempus.
            li Vulputate placerat amet pulvinar lorem nisl.
            li Consequat feugiat habitant gravida quisque elit bibendum id adipiscing sed.
