extends ../layout/main

block variables
  - barba = 'courses'
  - headerLink = 'Courses'

block content
  section.section-courses
    .container
      h4.title-h6.section-courses__subtitle Enjoy your studying!
      h1.title-h2.section-courses__title Our online courses
      
      .filters
        .filter-category
          a(href="#").tab.active
            | All
            sup 17
          a(href="#").tab
            | Marketing
            sup 4
          a(href="#").tab
            | Management
            sup 3
          a(href="#").tab
            | HR & Recruting
            sup 5
          a(href="#").tab
            | Design
            sup 2
          a(href="#").tab
            | Development
            sup 3
        
        form(novalidate).form-search.filter-search
          input(type="text", placeholder="Search course...").input-small
          button(type="submit").form-search__btn
            span.icon-search

      .section-courses__courses
        each course in [1, 2, 3, 4, 5, 6, 7, 8, 9]
          +course-vertical(course)

      a(href="#").section-courses__more
        span.icon-convert
        | Load more 
  
  include ../section/testimonials
  include ../section/certificate
  include ../section/subscribe