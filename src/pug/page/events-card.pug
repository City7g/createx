extends ../layout/main

block variables
  - barba = 'events'
  - headerLink = 'Events'

block content
  section.section-events
    .container
      h4.title-h6.section-events__subtitle Our events
      h1.title-h2.section-events__title Lectures, workshops & master-classes

      .filters
        .filter-select
          .title-h5.filter-select__title Event category
          select.filter-select__select
            option all themes 
            option Marketing 
            option Development 
            option Design
            option HR & Recruting

        .filter-select
          .title-h5.filter-select__title Sort by
          select.filter-select__select
            option newest
            option old
        
        .filter-select
          .title-h5.filter-select__title Show
          select.select-count.filter-select__select
            option 6
            option(selected) 9
            option 12
          .filter-select__text events per page
        
        form(novalidate).form-search.filter-search
          input(type="text", placeholder="Search blog...").input-small
          button(type="submit").form-search__btn
            span.icon-search

        .filter-grid
          a(href="/events.html").icon-list.filter-grid__item
          a(href="/events-card.html").icon-grid.filter-grid__item.active

      .section-events__grid
        each event in events
          +event-grid(event)
      
      +pagination

  include ../section/subscribe