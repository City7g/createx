  .event-join
    .container
      .event-join__wrap
        h3.title-h3.event-join__title 20% discount for early birds!

        .timer
          .timer__item
            .timer__value 06
            .timer__property Days
          .timer__item
            .timer__value 18
            .timer__property Hours
          .timer__item
            .timer__value 24
            .timer__property Mins
          .timer__item
            .timer__value 12
            .timer__property Sec

        form(novalidate).event-join__form
          label.label-input
            h5.text-small.label-input__title Full name
            input(type="text", placeholder="Your full name", name="name").input-small
          label.label-input
            h5.text-small.label-input__title Email
            input(type="email", placeholder="Your working email", name="email").input-small
          label.label-input
            h5.text-small.label-input__title Phone
            input(type="tel", placeholder="Your phone number", name="phone").input-small
          button(type="submit").btn-main.btn-small Join the course
  
  section.course-whom
    .container
      .course-whom__wrap
        .course-whom__content
          h4.title-h6.section__subtitle For whom?
          h2.title-h2.course-whom__title Who will benefit from the course:
        .course-whom__list
          ul.list-main
            li.title-bold Specialists with more than 1 year of active work experience
            li.title-bold Mobile app designers who want to improve their skills in solving business problems, creating and testing human-centered interfaces
            li.title-bold Professional designers who want to feel more confident in UX
            li.title-bold Specialists who would like to structure their knowledge, fill in the gaps

  section.course-learn
    .container
      .course-learn__wrap
        .course-learn__content
          h4.title-h6.section__subtitle Course program
          h2.title-h2.section__title What will you learn

          each item in [1, 2, 3, 4, 5, 6, 7, 8]
            .accordion
              span.icon-minus.accordion__minus
              span.icon-plus.accordion__plus
              h5.text-lead.accordion__subtitle=`Lesson ${item}.`
              h4.title-bold.accordion__title Aliquet lectus urna viverra in odio.
              p.text-main.gray-800.accordion__text Nulla amet, sagittis potenti rhoncus sit. Elit lectus nec pulvinar aliquet donec enim, ornare. Lacus facilisi curabitur turpis varius mauris. Nisi, tempus risus, odio mi suscipit sed. Curabitur faucibus porttitor quis sem lacus, arcu feugiat facilisis. Commodo nunc orci vitae accumsan id.
        .course-learn__image
          img(src="/img/course-learn-img.svg", alt="")

  include ../section/testimonials

  section.course-register
    .container
      .course-register__wrap
        .course-register__image
          img(src="/img/course-register-img.svg", alt="").course-register__img
        .course-register__content
          h4.title-h6.section__subtitle Leave a request now and get 20% off!
          h2.title-h2.course-register__title Register for the course

          form(novalidate).form-register.course-register__form
            label.label-input
              h5.text-main.label-input__title Full Name
              input(type="text", placeholder="Your full name", name="name")
            label.label-input
              h5.text-main.label-input__title Email
              input(type="email", placeholder="Your working email", name="email")
            label.label-input
              h5.text-main.label-input__title Phone
              input(type="text", placeholder="Your phone number", name="phone")
            button(type="submit").btn-main.form-register__btn Join the course

  section.course-other
    .container
      .section__header
        h4.title-h6.section__subtitle Check other courses
        h2.title-h2.section__title You may also like
      
      .course-other__slider.slider-2
        each course in courses
          +course-horizontal(course)

      .section__footer
        h4.title-h4 Do you want more courses?
        button.btn-main View all courses